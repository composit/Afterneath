<h1>Editing entry</h1>

<% form_for(@entry) do |f| %>
  <%= f.error_messages %>

  <p>
    Title<br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :enterer %> (You)<br />
    <%= f.text_field :enterer %>
  </p>
  <p>
    <%= f.label :enterer_url %> (Any site you want your name to link to - optional)<br />
    <%= f.text_field :enterer_url %>
  </p>
  <p>
    (Add content such as photos or video after clicking &quot;update&quot;)
  </p>
  <p>
    <%= f.hidden_field "approval_status", :value => "uploading" %>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Return without saving', entries_path %>
